<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-15dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="@+id/settings_info_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sousadev_logo"
        app:layout_constraintTop_toBottomOf="@+id/sousadev_logo" />

    <View
        android:id="@+id/divider6"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-15dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="@+id/settings_info_1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/sousadev_logo"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/sousadev_logo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/adtemplate_home"
        app:layout_constraintTop_toBottomOf="@+id/adtemplate_home"
        app:srcCompat="@drawable/sousadev_logo" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adtemplate_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:adSize="BANNER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></com.google.android.gms.ads.AdView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="131dp"
        android:layout_height="51dp"
        app:layout_constraintBottom_toBottomOf="@+id/patreon"
        app:layout_constraintEnd_toEndOf="@+id/patreon"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="@+id/patreon"
        app:layout_constraintTop_toTopOf="@+id/patreon"
        app:layout_constraintVertical_bias="0.52"
        app:srcCompat="@drawable/patreon" />


    <Button
        android:id="@+id/rate"
        android:layout_width="163dp"
        android:layout_height="58dp"
        android:text="@string/rate_app"
        android:textColor="#000000"
        app:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/patreon"
        android:layout_width="159dp"
        android:layout_height="76dp"
        android:layout_marginBottom="164dp"
        android:textColor="#000000"
        app:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/bottom_template_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/report_a_problem"
        app:backgroundTint="#C30D0D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_template_settings"
        style="@style/Widget.MaterialComponents.BottomNavigationView.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#218732"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/copyright_credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Copyright Â© 2023\nSousa Dev "
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_template_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/settings_info_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:maxLines="5"
        android:text="@string/app_developed_by"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/sousadev_logo"
        app:layout_constraintEnd_toEndOf="@+id/adtemplate_home"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/sousadev_logo"
        app:layout_constraintTop_toTopOf="@+id/sousadev_logo" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/sousadev_logo"
        app:layout_constraintStart_toStartOf="@+id/sousadev_logo"
        app:layout_constraintTop_toBottomOf="@+id/divider4"
        app:srcCompat="@drawable/baseline_warning_24" />
</androidx.constraintlayout.widget.ConstraintLayout>